<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:hapticFeedbackEnabled="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="326dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/capriola"
            android:text="CrÃ©er un compte"
            android:textColor="#FF9800"
            android:textSize="38dp"
            app:layout_constraintBottom_toTopOf="@+id/email1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/user"
            android:layout_width="323dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_radios"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/gris_int"
            app:layout_constraintBottom_toTopOf="@+id/password1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="323dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input_radios"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/gris_int"
            app:layout_constraintBottom_toTopOf="@+id/password1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="324dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/input_radios"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/gris_int"
            app:layout_constraintBottom_toTopOf="@+id/confirmpassword1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email1" />

        <EditText
            android:id="@+id/confirmpassword1"
            android:layout_width="323dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="62dp"
            android:background="@drawable/input_radios"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="ConfirmPassword"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/gris_int"
            app:layout_constraintBottom_toTopOf="@+id/register1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password1" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="156dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:text=" -ou continuer avec -"
            android:textColor="#F83758"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/googl"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/register1" />

        <LinearLayout
            android:id="@+id/authontication"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/googl"
                android:layout_width="67dp"
                android:layout_height="59dp"


                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center"
                android:paddingLeft="5dp"
                app:srcCompat="@drawable/google_icon_icons_com_62736" />
        </LinearLayout>

        <Button
            android:id="@+id/register1"
            android:layout_width="324dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="62dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="#FF9800"
            android:text="register"
            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmpassword1" />
    </LinearLayout>

</RelativeLayout>