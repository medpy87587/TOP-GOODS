<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFC107"
    tools:context=".onBording3">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="336dp"
        android:layout_height="112dp"
        android:fontFamily="@font/capriola"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Prêt à  commencer ?"
        android:textColor="#000000"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="342dp"
        android:layout_height="116dp"
        android:layout_marginBottom="184dp"
        android:fontFamily="@font/cormorant_garamond_semibold"
        android:gravity="center|center_horizontal"
        android:text="Inscrivez-vous pour acheter ou  vendre des produits en un clin  d'œil ."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="199dp"
        android:layout_height="194dp"
        android:src="@drawable/tick"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_onboarding3"
        android:layout_width="144dp"
        android:layout_height="49dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="#8356D5"
        android:text="Inscrivez-vous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.059" />

</androidx.constraintlayout.widget.ConstraintLayout>