<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FF9800"
    tools:context=".onbording2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="336dp"
        android:layout_height="112dp"
        android:fontFamily="@font/capriola"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Découvrez nos fonctionnalités"
        android:textColor="#000000"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="338dp"
        android:layout_height="170dp"
        android:layout_marginBottom="136dp"
        android:fontFamily="@font/cormorant_garamond_semibold"
        android:gravity="center|center_horizontal"
        android:text="Avec Top Goods, vous pouvez  facilement publier des articles à  vendre, parcourir une grande variété  de produits, discuter avec les  vendeurs et plus encore !"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="199dp"
        android:layout_height="181dp"
        android:src="@drawable/smartphone"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>