<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:hapticFeedbackEnabled="false">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="323dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:layout_marginStart="41dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/capriola"
                android:text="Bienvenue sur  Top Goods"
                android:textColor="#FF9800"
                android:textSize="43dp"
                app:layout_constraintBottom_toTopOf="@+id/email1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="330dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginStart="41dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/input_radios"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/gris_int"
                app:layout_constraintBottom_toTopOf="@+id/password1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="330dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/input_radios"
                android:drawableLeft="@drawable/ic_baseline_security_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/gris_int"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email1" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="153dp"
                android:layout_height="21dp"
                android:layout_gravity="right"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="40dp"
                android:gravity="right"
                android:text="Mot de passe oublié ?"
                android:textColor="#F83758"
                app:layout_constraintBottom_toTopOf="@+id/register1"
                app:layout_constraintEnd_toEndOf="@+id/password1"
                app:layout_constraintTop_toBottomOf="@+id/password1" />

            <Button
                android:id="@+id/register1"
                android:layout_width="318dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/input_bg"
                android:backgroundTint="#FF9800"
                android:text="Login"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="156dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="11dp"
                android:gravity="center"
                android:text=" -ou continuer avec -"
                android:textColor="#F83758"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/googl"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/register1" />

            <LinearLayout
                android:id="@+id/authontication"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/googl"
                    android:layout_width="67dp"
                    android:layout_height="59dp"


                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="center"
                    android:paddingLeft="5dp"
                    app:srcCompat="@drawable/google_icon_icons_com_62736" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="                      Créer un compte"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/register"
                    app:layout_constraintEnd_toStartOf="@+id/register"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/register"
                    android:layout_width="117dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="50dp"
                    android:text="  Register"
                    android:textColor="#FF9800"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView11"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>